{{>layout/header}}

<div class="container mt-4">
    <h2 class="mb-4">커뮤니티 게시판</h2>
    
    <!-- 버튼 영역 -->
    <div class="mb-4">
        <a href="/emp" class="btn btn-primary">글등록</a>
        <form action="/emp/deleteAll" method="post" style="display: inline;" onsubmit="return confirm('정말 전체 삭제하시겠습니까?');">
            <button type="submit" class="btn btn-danger">전체삭제</button>
        </form>
    </div>
    
    <!-- 데이터 테이블 -->
    <div class="mb-4">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">닉네임</th>
                    <th scope="col">카테고리</th>
                    <th scope="col">타이틀</th>
                    <th scope="col">글내용</th>
                </tr>
            </thead>
            <tbody>
                {{#resultList}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td><a href="/emp/edit/{{id}}" style="text-decoration: none; color: inherit; cursor: pointer;">{{name}}</a></td>
                    <td>{{tel}}</td>
                    <td>{{address}}</td>
                    <td>{{intro}}</td>
                </tr>
                {{/resultList}}
                {{^resultList}}
                <tr>
                    <td colspan="5" class="text-center">등록된 데이터가 없습니다.</td>
                </tr>
                {{/resultList}}
            </tbody>
        </table>
    </div>
</div>

<style>
    tbody tr:hover td a {
        color: #0d6efd !important;
        font-weight: bold;
    }
</style>

{{>layout/footer}}

